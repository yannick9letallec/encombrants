@import url('//fonts.googleapis.com/css?family=Roboto:700&text=css')
@import url('//fonts.googleapis.com/css?family=Kaushan+Script&text=!')


.logo 
	height 100px
	width 250px
	margin auto
	position absolute
	top -20px 
	right 0px 
	left -900px
	perspective 9999px
	transform-style preserve-3d


.layer 
	width 100%
	height 100%
	position absolute
	transform-style preserve-3d
	animation text_move 5s infinite alternate ease-in-out -7.5s
	animation-fill-mode forwards
	transform rotateY( 20deg ) rotateX( 10deg ) translateZ( 5px )


	&:after 
		font 30px/0.65 'Pacifico', 'Kaushan Script', 'Futura', 'Roboto', 'Trebuchet MS', Helvetica, sans-serif
		content 'Encombrants !'
		white-space pre
		text-align center
		height 25%
		width 25%
		position absolute
		top 50px 
		color darken(red, 4%)
		letter-spacing -2px
		text-shadow 4px 0 10px hsla(0, 0%, 0%, .13)


i = 1
NUM_LAYERS = 20

for i in 1..NUM_LAYERS 
	.layer:nth-child({i}):after
		transform translateZ( ( i - 1 ) * -1.5px )



