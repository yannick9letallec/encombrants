	-webkit-text-stroke 3px hsla(0, 0%, 0%, .25)

.layer:nth-child( n + { round( NUM_LAYERS / 2 + 1) } ):after 
	-webkit-text-stroke 5px dodgerblue
	text-shadow 6px 0px 6px darken(dodgerblue,35%),
		5px 5px 5px darken(dodgerblue,40%),
		 0px 6px 6px darken(dodgerblue,35%)


.layer:nth-child(n + { round( NUM_LAYERS / 2 + 2) } ):after 
	-webkit-text-stroke 5px darken(dodgerblue, 10%)

.layer:last-child:after 
	-webkit-text-stroke 7px hsla(0, 0%, 0%, .1)


.layer:first-child:after
	color yellow
	text-shadow none


