@import "reset"

break_1 = 470px
color_one = dodgerBlue
color_2 = white

a
	text-decoration none!important
	cursor pointer
	color color_one!important
	font-weight bold
	margin 0px 20px

body
	font-family Verdana, sans-serif
	font-weight normal
	font-size 12px
	padding 10px

header
	position relative
	border 3px dashed color_one
	height 50px
	margin-bottom 5px
	padding 10px
	background-color transparent
	h1
		display inline
		color blue
		text-align left
	.mobile_nav
		display none
		text-align right
		@media ( max-width: break_1 )
			display initial
			list-style-type none
			position absolute
			right 15px 
			top 8px
			color color_one
			cursor pointer 
	
	ul
		position absolute
		bottom -15px
		right 20px
		display inline
		width 100%
		text-align right
		@media ( max-width: break_1 )
			display none
		li
			display inline-block
			list-style-type none

#map
	width 100%
	height 50%
	z-index -9999

#arguments
	margin 15px 15px
	padding 15px

#enc_list 
	border 3px dashed color_one
	background-color transparent
	padding 10px
	text-align center
	margin-top 5px
	color color_one


#helper_div
	display none
	position fixed
	top 150px
	right 50px
	background-color white
	width 30%
	padding 15px

// SHARDS CARDS
.card
	height 45vh
	overflow hidden
.card-img-top
	height 20vh

// RESPONSIVE NAV
.responsive_nav
	background-color color_one
	border 5px solid color_2
	height 100vh
	position fixed
	right -300px
	top 0px
	transition right 1s linear 0s

	.title
		color color_2
		border 1px solid color_2	
		margin 10px
		padding 10px

	ul, li
		list-style-type none

	a
		text-align right
		color color_2!important
		

.opened
	right 0px
	top 0px
	transition right 1s linear 0s

.close_nav
	margin 10px
	text-align right
	cursor pointer	

